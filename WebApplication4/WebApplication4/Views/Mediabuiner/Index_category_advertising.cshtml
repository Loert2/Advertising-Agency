@model IEnumerable<WebApplication4.Models.Category_advertising>

@{
    ViewBag.Title = "Index";
}

<h2>Категории рекламы</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mass_media.Id_mass_media)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Advertising_period)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Visual_aid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mass_media.Id_mass_media)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advertising_period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visual_aid)
            </td>
            <td>
                @Html.ActionLink("Добавить масс-медиа", "Create_id_mass_media", new { id = item.Id_category_advertising }) 

            </td>
        </tr>
    }

</table>
